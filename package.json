{
  "name": "@mtti/microservice",
  "engines": {
    "node": ">=8.10.0"
  },
  "version": "0.4.0",
  "description": "Minimalistic modular microservice framework",
  "author": "Matti Hiltunen",
  "license": "Apache-2.0",
  "repository": "github:mtti/node-microservice",
  "main": "dist/index.js",
  "scripts": {
    "setup": "npm install",
    "build": "tsc",
    "test": "npm run lint && npm run jest:ts && npm run jest:js",
    "lint": "npm run lint:ts && npm run lint:js",
    "lint:js": "eslint 'src/**/*.spec.js' 'integration-tests/**/*.js'",
    "lint:ts": "tslint 'src/**/*.ts'",
    "jest:js": "jest --config ./jest.config.js.json",
    "jest:ts": "jest --config ./jest.config.ts.json",
    "tsc": "tsc",
    "tslint": "tslint",
    "prepare": "npm run build",
    "prepublishOnly": "npm run test"
  },
  "dependencies": {
    "winston": "3.2.1"
  },
  "devDependencies": {
    "@types/jest": "24.0.11",
    "eslint": "5.15.2",
    "eslint-config-airbnb-base": "13.2.0",
    "eslint-plugin-import": "2.16.0",
    "jest": "24.5.0",
    "ts-jest": "24.0.0",
    "tslint": "5.14.0",
    "typescript": "3.3.3333"
  },
  "files": [
    "dist"
  ]
}
